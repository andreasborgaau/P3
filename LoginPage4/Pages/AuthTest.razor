@page "/authtest"
@attribute [Authorize]

<h1>Authorization Example</h1>

<AuthorizeView>
    <Authorized>
        <h2>You can only see this if you're logged in</h2>
    </Authorized>
</AuthorizeView>

<AuthorizeView Policy="IsAdmin">
    <Authorized>
        <h2>You can only see this if your email ends with @@admin</h2>
    </Authorized>
</AuthorizeView>

<AuthorizeView Policy="IsEditor">
    <Authorized>
        <h2>You can only see this if your email ends with @@editor</h2>
    </Authorized>
</AuthorizeView>